<table class="table table-striped table-hover table-bordered" ng-init="init();">
	<thead>
		<th>Product</th>
		<th>Category</th>
		<th>Price</th>
		<th>Description</th>
	</thead>

	<tr ng-repeat="product in products" ng-click="select( product._id )">
		<td>{{product.name}}</td>
		<td>{{product.category}}</td>
		<td>{{product.price | currency}}</td>
		<td>{{product.desc}}</td>
		<td>
			<a class="btn btn-primary" href="#/edit/{{product._id}}">Edit Product</a>
			<div class="btn btn-danger" ng-click="destroy( product._id, $index );">Delete Product<div>
		</td>
	</tr>
</table>
<a href="#/add">Add Product</a>
